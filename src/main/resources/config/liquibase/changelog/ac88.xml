<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">

    <changeSet id="update-bank-transfer-transaction-i18n-names" author="brunecker">
        <update tableName="transaction">
            <column name="description" type="varchar(255)" valueComputed="REPLACE(description, 'Bank transfer', 'i18n{transaction.descriptions.bankTransfer}')"/>
            <where>description like 'Bank transfer%'</where>
        </update>
    </changeSet>

</databaseChangeLog>
