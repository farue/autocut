<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">

        <property name="autoIncrement" value="true"/>

    <!--
        Added the entity InternetAccess.
    -->
    <changeSet id="20191117011748-1" author="jhipster">
        <createTable tableName="internet_access">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="blocked" type="boolean">
                <constraints nullable="false" />
            </column>
            <column name="ip_1" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="ip_2" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="switch_interface" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="port" type="integer">
                <constraints nullable="false" />
            </column>
            <column name="network_switch_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
    </changeSet>

    <changeSet id="20191117011748-1-relations" author="jhipster">

    </changeSet>
    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here -->

    <changeSet id="20191117011748-1-data" author="brunecker">
        <loadData
                  file="config/liquibase/data/internet_access.csv"
                  separator=";"
                  tableName="internet_access">
            <column name="id" type="numeric"/>
            <column name="blocked" type="boolean"/>
            <column name="ip_1" type="string"/>
            <column name="ip_2" type="string"/>
            <column name="switch_interface" type="string"/>
            <column name="port" type="numeric"/>
            <column name="network_switch_id" type="numeric"/>
            <!-- jhipster-needle-liquibase-add-loadcolumn - JHipster (and/or extensions) can add load columns here -->
        </loadData>
    </changeSet>

</databaseChangeLog>
