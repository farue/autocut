<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <!--
        Added the entity BroadcastMessage.
    -->
    <changeSet id="20210807170559-1" author="jhipster">
        <createTable tableName="broadcast_message">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="type" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="start" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
            <column name="end" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
            <column name="users_only" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="dismissible" type="boolean">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
        <dropDefaultValue tableName="broadcast_message" columnName="start" columnDataType="${datetimeType}"/>
        <dropDefaultValue tableName="broadcast_message" columnName="end" columnDataType="${datetimeType}"/>
    </changeSet>

    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here -->

    <!--
        Load sample data generated with Faker.js
        - This data can be easily edited using a CSV editor (or even MS Excel) and
          is located in the 'src/main/resources/config/liquibase/fake-data' directory
        - By default this data is applied when running with the JHipster 'dev' profile.
          This can be customized by adding or removing 'faker' in the 'spring.liquibase.contexts'
          Spring Boot configuration key.
    -->
    <changeSet id="20210807170559-1-data" author="jhipster" context="faker">
        <loadData
            file="config/liquibase/fake-data/broadcast_message.csv"
            separator=";"
            tableName="broadcast_message">
            <column name="id" type="numeric"/>
            <column name="type" type="string"/>
            <column name="start" type="${datetimeType}"/>
            <column name="end" type="${datetimeType}"/>
            <column name="users_only" type="boolean"/>
            <column name="dismissible" type="boolean"/>
            <!-- jhipster-needle-liquibase-add-loadcolumn - JHipster (and/or extensions) can add load columns here -->
        </loadData>
    </changeSet>

    <!--
        Added the entity BroadcastMessageText.
    -->
    <changeSet id="20210808220524-1" author="jhipster">
        <createTable tableName="broadcast_message_text">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="lang_key" type="varchar(2)">
                <constraints nullable="false" />
            </column>
            <column name="text" type="varchar(4000)">
                <constraints nullable="false" />
            </column>
            <column name="message_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
    </changeSet>

    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here -->

    <!--
        Load sample data generated with Faker.js
        - This data can be easily edited using a CSV editor (or even MS Excel) and
          is located in the 'src/main/resources/config/liquibase/fake-data' directory
        - By default this data is applied when running with the JHipster 'dev' profile.
          This can be customized by adding or removing 'faker' in the 'spring.liquibase.contexts'
          Spring Boot configuration key.
    -->
    <changeSet id="20210808220524-1-data" author="jhipster" context="faker">
        <loadData
            file="config/liquibase/fake-data/broadcast_message_text.csv"
            separator=";"
            tableName="broadcast_message_text">
            <column name="id" type="numeric"/>
            <column name="lang_key" type="string"/>
            <column name="text" type="string"/>
            <column name="message_id" type="numeric"/>
            <!-- jhipster-needle-liquibase-add-loadcolumn - JHipster (and/or extensions) can add load columns here -->
        </loadData>
    </changeSet>

    <!--
        Added the constraints for entity BroadcastMessageText.
    -->
    <changeSet id="20210808220524-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="message_id"
                                 baseTableName="broadcast_message_text"
                                 constraintName="fk_broadcast_message_text__message_id"
                                 referencedColumnNames="id"
                                 referencedTableName="broadcast_message"/>

    </changeSet>
</databaseChangeLog>
