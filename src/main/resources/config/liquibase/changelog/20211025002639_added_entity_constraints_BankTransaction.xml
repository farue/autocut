<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd">
    <!--
        Added the constraints for entity BankTransaction.
    -->
    <changeSet id="20211025002639-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="bank_account_id"
                                 baseTableName="bank_transaction"
                                 constraintName="fk_bank_transaction__bank_account_id"
                                 referencedColumnNames="id"
                                 referencedTableName="bank_account"/>

        <addForeignKeyConstraint baseColumnNames="contra_bank_account_id"
                                 baseTableName="bank_transaction"
                                 constraintName="fk_bank_transaction__contra_bank_account_id"
                                 referencedColumnNames="id"
                                 referencedTableName="bank_account"/>

        <addForeignKeyConstraint baseColumnNames="bank_transaction_id"
                                 baseTableName="rel_bank_transaction__left"
                                 constraintName="fk_rel_bank_transaction__left__bank_transaction_id"
                                 referencedColumnNames="id"
                                 referencedTableName="bank_transaction"/>

        <addForeignKeyConstraint baseColumnNames="left_id"
                                 baseTableName="rel_bank_transaction__left"
                                 constraintName="fk_rel_bank_transaction__left__left_id"
                                 referencedColumnNames="id"
                                 referencedTableName="bank_transaction"/>

        <addForeignKeyConstraint baseColumnNames="transaction_book_id"
                                 baseTableName="bank_transaction"
                                 constraintName="fk_bank_transaction__transaction_book_id"
                                 referencedColumnNames="id"
                                 referencedTableName="transaction_book"/>
    </changeSet>
</databaseChangeLog>
