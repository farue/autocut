<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <!--
        Added the constraints for entity PaymentEntry.
    -->
    <changeSet id="20200112182858-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="transaction_id"
                                 baseTableName="payment_entry"
                                 constraintName="fk_payment_entry_transaction_id"
                                 referencedColumnNames="id"
                                 referencedTableName="transaction"/>

        <addForeignKeyConstraint baseColumnNames="account_id"
                                 baseTableName="payment_entry"
                                 constraintName="fk_payment_entry_account_id"
                                 referencedColumnNames="id"
                                 referencedTableName="payment_account"/>

    </changeSet>
</databaseChangeLog>
