<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">

    <changeSet id="create-table-scheduled_job" author="brunecker">
        <createTable tableName="scheduled_job">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(100)">
                <constraints nullable="false" />
            </column>
            <column name="start_time" type="datetime(6)">
                <constraints nullable="true" />
            </column>
            <column name="end_time" type="datetime(6)">
                <constraints nullable="true" />
            </column>
            <column name="status" type="varchar(10)">
                <constraints nullable="true" />
            </column>
            <column name="exit_message" type="varchar(2500)">
                <constraints nullable="true" />
            </column>
            <column name="data_start_time" type="datetime(6)">
                <constraints nullable="true" />
            </column>
            <column name="data_end_time" type="datetime(6)">
                <constraints nullable="true" />
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
