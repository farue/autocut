<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">

        <property name="autoIncrement" value="true"/>

    <!--
        Added the entity GlobalSetting.
    -->
    <changeSet id="20200410002948-1" author="jhipster">
        <createTable tableName="global_setting">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="setting_key" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="setting_value" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="setting_type" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
    </changeSet>

    <changeSet id="20200410002948-1-relations" author="jhipster">

    </changeSet>
    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here -->

    <changeSet id="20200410002948-1-data" author="brunecker">
        <loadData
                  file="config/liquibase/data/global_setting.csv"
                  separator=";"
                  tableName="global_setting">
            <column name="id" type="numeric"/>
            <column name="setting_key" type="string"/>
            <column name="setting_value" type="string"/>
            <column name="setting_type" type="string"/>
            <!-- jhipster-needle-liquibase-add-loadcolumn - JHipster (and/or extensions) can add load columns here -->
        </loadData>
    </changeSet>

</databaseChangeLog>
